{
  "compilerOptions": {
    "target": "es2016",
    "sourceMap": true,
    "removeComments": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "module": "esnext"
  },
  "exclude": [
    "./node_modules/**/*",
    "./tests/*",
    "./backend/*"
  ]
}
